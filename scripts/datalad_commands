# Obtain the dataset
datalad clone git@github.com:OpenNeuroDatasets/ds000201.git
# or (no GitHub account)
datalad clone https://github.com/OpenNeuroDatasets/ds000201.git
# or (Datalad superdataset)
datalad clone ///openneuro/ds000201

# Download dataset content
datalad get 

# Summary of total content present locally
datalad status --annex all

# Run script to fix BIDS errors
datalad run -m "Fix BIDS errors in original dataset" \
-i "data/ds000201" \
-o "data/ds000201/task-*_bold.json" \
-o "data/ds000201/sub-*/ses-*/beh/sub-*_task-PVT_events.tsv" \
-o "data/ds000201/sub-*/ses-*/sub-*_ses-*_scans.tsv" \
"python3 scripts/bids_fix.py" \
--dry-run
