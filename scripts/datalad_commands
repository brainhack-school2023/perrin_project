# Obtain the dataset
datalad clone git@github.com:OpenNeuroDatasets/ds002336.git
# or (no GitHub account)
datalad clone https://github.com/OpenNeuroDatasets/ds002336.git
# or (Datalad superdataset)
datalad clone ///openneuro/ds002336

# Download dataset content
datalad get 

# Summary of total content present locally
datalad status --annex all

# Run script to fix BIDS errors
datalad run -m "Fix BIDS errors in original dataset" \
--input "data/ds000201" \
--output "data/ds000201/task-*_bold.json" \
"data/ds000201/sub-*/ses-*/beh/sub-*_task-PVT_events.tsv" \
"data/ds000201/sub-*/ses-*/sub-*_ses-*_scans.tsv" \
"python3 scripts/bids_fix.py" \
--dry-run
